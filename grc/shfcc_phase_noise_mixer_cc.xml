<?xml version="1.0"?>
<block>
  <name>Phase Noise Mixer</name>
  <key>shfcc_phase_noise_mixer_cc</key>
  <category>[shfcc]</category>
  <import>import shfcc</import>
  <make>shfcc.phase_noise_mixer_cc($fc, $fs, $k0, $k2, $cfo_ampl, $cfo_freq, $impair)</make>
  <callback>set_fc($fc)</callback>
  <callback>set_k0($k0)</callback>
  <callback>set_k2($k2)</callback>
  <callback>set_cfo_ampl($cfo_ampl)</callback>
  <callback>set_cfo_freq($cfo_freq)</callback>
  <callback>set_impair($impair)</callback>

  <param>
    <name>Mixer frequency</name>
    <key>fc</key>
    <type>real</type>
  </param>
  
  <param>
    <name>Sampling rate</name>
    <key>fs</key>
    <type>real</type>
  </param>

  <param>
    <name>K0</name>
    <key>k0</key>
    <type>real</type>
  </param>

  <param>
    <name>K2</name>
    <key>k2</key>
    <type>real</type>
  </param>

  <param>
    <name>CFO Ampl</name>
    <key>cfo_ampl</key>
    <type>real</type>
  </param>
  <param>
    <name>CFO Freq</name>
    <key>cfo_freq</key>
    <type>real</type>
  </param>
  <param>
    <name>Impairment</name>
    <key>impair</key>
    <value>False</value>
    <type>bool</type>
  </param>        

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
